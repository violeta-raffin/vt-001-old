			.row-centered.sortable-pricing-items
				- var pricing = [['img/gallery1.jpg', 'Pancake', 'first'],['img/gallery2.jpg', 'Cakes', 'first'],['img/gallery3.jpg', 'Other', 'first'],['img/gallery4.jpg', 'Cakes', 'first'],['img/gallery5.jpg', 'Cakes', 'second'],['img/gallery6.jpg', 'Cakes', 'second']]
