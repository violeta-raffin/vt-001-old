	// Sorteable Gallery
	section
		div.container-fluid
			div.row.sortable-gallery
				div.col-md-3.text-center
					h1 Decoration
					span.text-deco-1 GALLERY PROYECTS
					p
					| Lorem ipsum dolor sit amet consectetur adipisicing elit. Molestiae fugit officia doloremque ipsam in possimus.
					.sortable-gallery-filters
						ul
							li.active(data-filter='*') All
