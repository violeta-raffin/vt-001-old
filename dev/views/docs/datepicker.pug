extends /master.pug
block content
	- var currentUrl = 'cards.html'
	section
		.container-fluid
			.row
				.col-md-12
					.row
						.col-lg-2.col-sm-3.pull-lg-9.pull-md-8
							//- SIDEBAR
							include ../includes/sidebar.pug
						.col-lg-10.col-sm-9.push-lg-3.push-md-4.theme-docs.code-no-bs
							h1 Bootstrap 4 components
							hr
							// Datepicker
							h4 Datepicker
								small 
									a(href='https://getbootstrap.com/docs/4.1/components/card/' target='_blank') (Official docs)
							.panel
								.panel-body
									.p-3
										input#datepicker(width='276')
								.panel-footer
									pre.
										\n							
							h4.mt-5
								| Material design example
							.panel
								.panel-body
									.p-3
										input#datepicker2(width='276')
								.panel-footer
									pre.
										\n							
							h4.mt-5
								| Date range example
							.panel
								.panel-body
									.p-3
										label Start Date:
										input#startDate(width='276')
										br
										label End Date:
										input#endDate(width='276')
								.panel-footer
									pre.
										\n							
							h4.mt-5
								| Timepicker example
							.panel
								.panel-body
									.p-3
										input#timepicker(width='276')
								.panel-footer
									pre


